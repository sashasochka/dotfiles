#!/bin/bash

projects="$HOME/Projects"
templates="$projects/Olimp/Templates"
template="$templates/cf_nb/"
netbeans="$HOME/netbeans-7.3/bin/netbeans"

if [[ ! -d $template ]]; then
    echo "  Template not found in $template"
    exit 1
fi

if [[ $# -ne 0 ]]; then
    echo "  Format:    yandcf"
    exit 2
fi

for task in {A,B,C,D,E,F}; do
    # make new project for every task in contest.
    # Copy files if accidental overwrite
    name="yand_algo_$task"
    cp -rfd $template $projects/$name
    sed -i "s/cf_netbeans_project/Yandex.Algorithm $task/g" $projects/$name/nbproject/project.xml
done;

$netbeans $projects/yand_algo_{A,B,C,D,E,F} &
